{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "source": "src/lib/index.ts",
  "main": "dist/index.js",
  "module": "dist/ui.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/lib"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdx build --entry src/lib/index.ts --tsconfig tsconfig.lib.json",
    "start": "tsdx watch --entry src/lib/index.ts --tsconfig tsconfig.lib.json",
    "dev": "yarn run dokz:dev",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "dokz:dev": "next dev -p 3001",
    "dokz:build": "next build",
    "dokz:start": "next start"
  },
  "dependencies": {
    "@popperjs/core": "^2.6.0",
    "@react-aria/focus": "^3.2.3",
    "@react-aria/interactions": "^3.3.2",
    "@react-aria/visually-hidden": "^3.2.1",
    "@stitches/react": "^0.0.3-canary.4",
    "framer-motion": "^3.2.2-rc.1",
    "jotai": "^0.12.7",
    "react-uid": "^2.3.1",
    "react-virtual": "^2.3.2"
  },
  "devDependencies": {
    "@chakra-ui/react": "^1.1.6",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-eslint": "^10.1.0",
    "babel-preset-react-app": "^10.0.0",
    "dokz": "^2.0.4",
    "eslint": "^7.18.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "next": "^10.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-view": "^2.3.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "consistent"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"lib/**/*.*\" --staged && run-p lint typecheck"
    }
  },
  "resolutions": {
    "typescript": "^4.1.x",
    "prettier": "^2.2.1"
  }
}
