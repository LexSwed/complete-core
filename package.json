{
  "name": "example",
  "version": "0.0.1",
  "private": true,
  "source": "lib/index.ts",
  "main": "build/index.js",
  "module": "build/index.module.js",
  "unpkg": "build/index.umd.js",
  "typings": "build/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "microbundle --compress --jsx React.createElement",
    "start": "microbundle watch --no-compress --jsx React.createElement",
    "dev": "run-p start dokz:dev",
    "lint": "eslint .",
    "dokz:dev": "next dev",
    "dokz:build": "next build",
    "dokz:start": "next start"
  },
  "dependencies": {
    "@chakra-ui/core": "0.x",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@react-aria/button": "^3.2.1",
    "@stitches/react": "^0.0.2",
    "dokz": "*",
    "next": "latest",
    "react": "16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/react": "^16.9.49",
    "jest": "^26.4.2",
    "microbundle": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "@stitches/react": "*",
    "react": ">=16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"src/**/*.*\" --staged && yarn lint && tsc --noEmit"
    }
  }
}
