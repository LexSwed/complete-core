{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "source": "src/lib/index.ts",
  "main": "build/index.js",
  "module": "build/index.module.js",
  "unpkg": "build/index.umd.js",
  "typings": "build/index.d.ts",
  "files": [
    "build",
    "lib"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "microbundle --compress --external react,react-dom --jsx React.createElement --entry src/lib/index.ts --output build/index.js --no-pkg-main --tsconfig tsconfig.lib.json",
    "start": "microbundle watch --no-compress --external react,react-dom --jsx React.createElement --entry src/lib/index.ts --output build/index.js --no-pkg-main --format modern --tsconfig tsconfig.lib.json",
    "dev": "yarn run dokz:dev",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "dokz:dev": "next dev",
    "dokz:build": "next build",
    "dokz:start": "next start"
  },
  "dependencies": {
    "@chakra-ui/core": "0.x",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@popperjs/core": "^2.5.2",
    "@react-aria/button": "^3.2.1",
    "@react-aria/focus": "^3.2.1",
    "@stitches/react": "^0.0.3-canary.1",
    "dokz": "*",
    "next": "latest",
    "react": "16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-uid": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.49",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.9.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "microbundle": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"lib/**/*.*\" --staged && run-p lint typecheck"
    }
  }
}
