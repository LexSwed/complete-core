{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "license": "Apache-2.0",
  "main": "./dist/ui.umd.js",
  "module": "./dist/ui.es.js",
  "exports": {
    ".": {
      "import": "./dist/ui.es.js",
      "require": "./dist/ui.umd.js"
    }
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "version": "0.0.1",
  "source": "src/lib/index.ts",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn build:types && yarn vite build",
    "build:types": "tsc --project tsconfig.lib.json",
    "start": "vite",
    "dev": "yarn run dokz:dev",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "dokz:dev": "next dev -p 3001",
    "dokz:build": "next build",
    "dokz:start": "next start",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.0",
    "@popperjs/core": "^2.9.2",
    "@react-aria/focus": "^3.2.4",
    "@react-aria/interactions": "^3.3.4",
    "@react-aria/visually-hidden": "^3.2.1",
    "@stitches/react": "^0.1.4",
    "framer-motion": "^4.1.2",
    "jotai": "^0.16.0",
    "react-uid": "^2.3.1",
    "react-virtual": "^2.6.1"
  },
  "devDependencies": {
    "@chakra-ui/react": "^1.4.2",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vitejs/plugin-react-refresh": "^1.3.2",
    "babel-eslint": "^10.1.0",
    "babel-preset-react-app": "^10.0.0",
    "dokz": "^2.0.7",
    "eslint": "^7.23.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "next": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-view": "^2.3.6",
    "typescript": "^4.2.3",
    "vite": "^2.1.5"
  },
  "peerDependencies": {
    "@heroicons/react": "^1.0.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "consistent"
  }
}
