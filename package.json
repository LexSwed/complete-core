{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,mdx,html}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "rm -rf ./dist && run-p build:*",
    "build:lib": "rollup -c",
    "build:types": "tsc --project tsconfig.lib.json",
    "dev": "yarn run dokz:dev",
    "lint": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "dokz:dev": "next dev -p 3001",
    "dokz:build": "next build",
    "dokz:start": "next start",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.1",
    "@popperjs/core": "^2.9.2",
    "@radix-ui/react-polymorphic": "^0.0.10",
    "@react-aria/focus": "^3.2.4",
    "@react-aria/interactions": "^3.3.4",
    "@react-aria/visually-hidden": "^3.2.1",
    "@stitches/react": "^0.1.9",
    "framer-motion": "^4.1.10",
    "jotai": "^0.16.3",
    "react-keyed-flatten-children": "^1.3.0",
    "react-uid": "^2.3.1",
    "react-virtual": "^2.7.1"
  },
  "devDependencies": {
    "@chakra-ui/react": "^1.6.0",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.0",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "babel-eslint": "^10.1.0",
    "babel-preset-react-app": "^10.0.0",
    "dokz": "^2.0.7",
    "esbuild": "^0.11.15",
    "eslint": "^7.25.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "next": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-view": "^2.3.6",
    "rollup": "^2.45.2",
    "rollup-plugin-esbuild": "^4.1.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "@heroicons/react": "^1.0.0",
    "@stitches/react": "^0.1.0",
    "framer-motion": "^4.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "keywords": [
    "react",
    "ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "library",
    "design-system"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "consistent"
  }
}
