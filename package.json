{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "source": "src/lib/index.ts",
  "main": "dist/index.js",
  "module": "dist/ui.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/lib"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdx build --entry src/lib/index.ts --tsconfig tsconfig.lib.json",
    "start": "tsdx watch --entry src/lib/index.ts --tsconfig tsconfig.lib.json",
    "dev": "yarn run dokz:dev",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "dokz:dev": "next dev -p 3001",
    "dokz:build": "next build",
    "dokz:start": "next start"
  },
  "dependencies": {
    "@popperjs/core": "^2.8.3",
    "@react-aria/focus": "^3.2.3",
    "@react-aria/interactions": "^3.3.3",
    "@react-aria/visually-hidden": "^3.2.1",
    "@stitches/react": "^0.1.0-canary.12",
    "framer-motion": "^3.6.7",
    "jotai": "^0.15.0",
    "react-uid": "^2.3.1",
    "react-virtual": "^2.4.0",
    "scheduler": "^0.20.1"
  },
  "devDependencies": {
    "@chakra-ui/react": "^1.3.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "babel-eslint": "^10.1.0",
    "babel-preset-react-app": "^10.0.0",
    "dokz": "^2.0.7",
    "eslint": "^7.20.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "4",
    "jest": "^26.6.3",
    "next": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-view": "^2.3.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "type-fest": "^0.21.2",
    "typescript": "^4.1.5"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "consistent"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"lib/**/*.*\" --staged && run-p lint typecheck"
    }
  },
  "resolutions": {
    "typescript": "^4.1.x",
    "prettier": "^2.2.1"
  }
}
