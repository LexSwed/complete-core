{
  "name": "example",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "lib/index.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "microbundle --jsxFragment React.Fragment --compress --format modern,cjs",
    "start": "microbundle watch --jsxFragment React.Fragment --no-compress --format modern,cjs",
    "dev": "run-p start dokz:dev",
    "lint": "eslint .",
    "dokz:dev": "next dev",
    "dokz:build": "next build",
    "dokz:start": "next start"
  },
  "dependencies": {
    "@chakra-ui/core": "0.x",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@stitches/react": "^0.0.2",
    "dokz": "*",
    "next": "latest",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/react": "^16.9.49",
    "compose-function": "^3.0.3",
    "jest": "^26.4.2",
    "microbundle": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"src/**/*.*\" --staged && yarn lint && tsc --noEmit"
    }
  }
}
